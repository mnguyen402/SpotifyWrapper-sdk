<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SummaryActivity">
    <Button
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"

        android:text="Back"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/saveslot1"
        android:layout_width="353dp"
        android:layout_height="130dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/saveslot2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SummaryTitle" />

    <TextView
        android:id="@+id/saveslot2"
        android:layout_width="357dp"
        android:layout_height="145dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/saveslot3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.462"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saveslot1" />

    <TextView
        android:id="@+id/saveslot3"
        android:layout_width="361dp"
        android:layout_height="124dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/saveslot4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saveslot2" />

    <TextView
        android:id="@+id/saveslot4"
        android:layout_width="365dp"
        android:layout_height="124dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saveslot3" />

    <TextView
        android:id="@+id/SummaryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saved Past Summaries wrapper"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/saveslot1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.698"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>